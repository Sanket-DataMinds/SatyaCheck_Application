<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Extreme padding to guarantee complete shield visibility (40dp = 37% padding) -->
    <item android:left="40dp"
          android:right="40dp" 
          android:top="40dp"
          android:bottom="40dp">
        <bitmap android:src="@drawable/ic_shield_foreground"
                android:gravity="center"
                android:filter="true"
                android:antialias="true" />
    </item>
</layer-list>